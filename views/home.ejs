<%- include("partials/header", { title: "Home" }) %>

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-50">
      <div class="col-md-8 text-center">

        <!-- Main heading -->
        <h1 class="display-4 fw-bold mb-3">
          <i class="bi bi-journal-check me-2"></i>Assignment Tracker
        </h1>

        <!-- Subheading -->
        <p class="lead text-secondary mb-4">
          A simple place to keep track of your school assignments.  
          Login once, and your work stays organized.
        </p>

        <!--  login to assignments -->
        <% if (!user) { %>
          <div class="d-flex flex-wrap justify-content-center gap-3">
            <a href="/auth/google" class="btn btn-primary btn-lg">
              <i class="bi bi-google me-1"></i> Login with Google
            </a>

            <a href="/auth/github" class="btn btn-outline-light btn-lg">
              <i class="bi bi-github me-1"></i> Login with GitHub
            </a>
          </div>
        <% } else { %>
          <a href="/assignments" class="btn btn-success btn-lg">
            <i class="bi bi-arrow-right-circle me-1"></i> Go to My Assignments
          </a>
        <% } %>

        <!-- Tiny helper text -->
        <p class="text-secondary small mt-3">
          Youâ€™ll be redirected to your assignments after logging in.
        </p>

      </div>
    </div>
  </div>
</section>

<%- include("partials/footer") %>


