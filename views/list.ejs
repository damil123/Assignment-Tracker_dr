<!-- Assignment list page - displays all assignments (public view) -->
<%- include('partials/header', { title: 'All Assignments' }) %>

<div class="container my-5">
    <!-- Page heading -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-list-task"></i> All Assignments</h1>
        
        <!-- Show add button only if logged in -->
        <% if (user) { %>
            <a href="/assignments/add" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Assignment
            </a>
        <% } %>
    </div>
    
    <!-- Check if there are any assignments -->
    <% if (assignments.length === 0) { %>
        <!-- Show message if no assignments exist -->
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle"></i> 
            No assignments yet. 
            <% if (user) { %>
                <a href="/assignments/add">Add your first assignment!</a>
            <% } else { %>
                Please login to add assignments.
            <% } %>
        </div>
    <% } else { %>
        <!-- Display assignments in a grid of cards -->
        <div class="row g-4">
            <!-- Loop through each assignment -->
            <% assignments.forEach(assignment => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Card header with course name -->
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-book"></i> 
                                <%= assignment.courseName %>
                            </h5>
                        </div>
                        
                        <!-- Card body with assignment details -->
                        <div class="card-body">
                            <!-- Assignment title -->
                            <h6 class="card-title"><%= assignment.title %></h6>
                            
                            <!-- Due date with icon -->
                            <p class="mb-2">
                                <i class="bi bi-calendar-event"></i> 
                                <strong>Due:</strong> 
                                <%= new Date(assignment.dueDate).toLocaleDateString('en-US', { 
                                    month: 'short', 
                                    day: 'numeric', 
                                    year: 'numeric' 
                                }) %>
                            </p>
                            
                            <!-- Status badge - different color for each status -->
                            <p class="mb-2">
                                <strong>Status:</strong>
                                <% if (assignment.status === 'Completed') { %>
                                    <span class="badge bg-success"><%= assignment.status %></span>
                                <% } else if (assignment.status === 'In Progress') { %>
                                    <span class="badge bg-warning text-dark"><%= assignment.status %></span>
                                <% } else { %>
                                    <span class="badge bg-secondary"><%= assignment.status %></span>
                                <% } %>
                            </p>
                            
                            <!-- Priority badge - different color for each priority -->
                            <p class="mb-3">
                                <strong>Priority:</strong>
                                <% if (assignment.priority === 'High') { %>
                                    <span class="badge bg-danger"><%= assignment.priority %></span>
                                <% } else if (assignment.priority === 'Medium') { %>
                                    <span class="badge bg-warning text-dark"><%= assignment.priority %></span>
                                <% } else { %>
                                    <span class="badge bg-info"><%= assignment.priority %></span>
                                <% } %>
                            </p>
                            
                            <!-- Description (show first 100 characters) -->
                            <% if (assignment.description) { %>
                                <p class="card-text text-muted small">
                                    <%= assignment.description.substring(0, 100) %>
                                    <%= assignment.description.length > 100 ? '...' : '' %>
                                </p>
                            <% } %>
                            
                            <!-- Show who created it -->
                            <p class="text-muted small mb-0">
                                <i class="bi bi-person"></i> Added by: <%= assignment.createdBy %>
                            </p>
                        </div>
                        
                        <!-- Card footer with action buttons (only if logged in) -->
                        <% if (user) { %>
                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <!-- Edit button -->
                                    <a href="/assignments/edit/<%= assignment._id %>" 
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    
                                    <!-- Delete button - triggers modal -->
                                    <button type="button" 
                                            class="btn btn-sm btn-outline-danger flex-fill" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal<%= assignment._id %>">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                            
                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteModal<%= assignment._id %>" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <!-- Modal header -->
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                <i class="bi bi-exclamation-triangle text-warning"></i> 
                                                Confirm Delete
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        
                                        <!-- Modal body with warning message -->
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete this assignment?</p>
                                            <div class="alert alert-warning">
                                                <strong><%= assignment.title %></strong>
                                                <br>
                                                <small>Course: <%= assignment.courseName %></small>
                                            </div>
                                            <p class="text-danger">
                                                <i class="bi bi-exclamation-circle"></i> 
                                                This action cannot be undone!
                                            </p>
                                        </div>
                                        
                                        <!-- Modal footer with buttons -->
                                        <div class="modal-footer">
                                            <!-- Cancel button - closes modal -->
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                            
                                            <!-- Delete form - actually deletes the assignment -->
                                            <form action="/assignments/delete/<%= assignment._id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="bi bi-trash"></i> Yes, Delete
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>