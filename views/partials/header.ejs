<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- dynamic page title -->
    <title><%= typeof title != 'undefined' ? title : 'Assignment Tracker' %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- custom stylesheet -->
    <link rel="stylesheet" href="/css/style.css">
</head>

<!-- dark theme applied to whole page -->
<body class="bg-dark text-light">

<!-- top navigation bar shown on every page -->
<nav class="navbar navbar-expand-lg navbar-dark bg-black border-bottom border-secondary">
    <div class="container">

        <!-- site logo / brand -->
        <a class="navbar-brand fw-bold" href="/">
            <i class="bi bi-journal-check text-warning"></i> Assignment Tracker
        </a>

        <!-- toggle button for smaller screens -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- main navigation links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                <!-- home link -->
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>

                <!-- assignments list -->
                <li class="nav-item">
                    <a class="nav-link" href="/assignments">
                        <i class="bi bi-list-task"></i> View Assignments
                    </a>
                </li>

                <!-- links shown when logged in -->
                <% if (user) { %>

                    <li class="nav-item">
                        <a class="nav-link text-success" href="/assignments/add">
                            <i class="bi bi-plus-circle"></i> Add New
                        </a>
                    </li>

                    <!-- user dropdown (name + logout) -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-info" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= user.name %>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>

                <% } else { %>

                    <!-- login dropdown (Google/GitHub) -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="/auth/google">
                                    <i class="bi bi-google"></i> Login with Google
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/auth/github">
                                    <i class="bi bi-github"></i> Login with GitHub
                                </a>
                            </li>
                        </ul>
                    </li>

                <% } %>
            </ul>
        </div>
    </div>
</nav>
