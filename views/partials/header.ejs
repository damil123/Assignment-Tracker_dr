html<!-- views/partials/header.ejs -->
<!-- Shared header component - appears on every page -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Page title - changes based on page -->
    <title><%= typeof title != 'undefined' ? title : 'Assignment Tracker' %></title>
    
    <!-- Bootstrap CSS - for styling buttons, forms, cards, etc -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons - for pretty icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- Custom CSS file -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<!-- Navigation Bar - sticky at top -->
<nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
    <div class="container">
        <!-- Logo/Brand -->
        <a class="navbar-brand" href="/">
            <i class="bi bi-journal-check"></i> Assignment Tracker
        </a>
        
        <!-- Mobile menu button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- Navigation links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <!-- Home link -->
                <li class="nav-item">
                    <a class="nav-link" href="/">
                        <i class="bi bi-house-door"></i> Home
                    </a>
                </li>
                
                <!-- Assignments link -->
                <li class="nav-item">
                    <a class="nav-link" href="/assignments">
                        <i class="bi bi-list-task"></i> Assignments
                    </a>
                </li>
                
                <!-- Check if user is logged in -->
                <% if (user) { %>
                    <!-- Show when logged in -->
                    <li class="nav-item">
                        <a class="nav-link" href="/assignments/add">
                            <i class="bi bi-plus-circle"></i> Add Assignment
                        </a>
                    </li>
                    
                    <!-- User dropdown menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle"></i> <%= user.name %>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/auth/logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                <% } else { %>
                    <!-- Show when logged out -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="/auth/google">
                                    <i class="bi bi-google"></i> Login with Google
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/auth/github">
                                    <i class="bi bi-github"></i> Login with GitHub
                                </a>
                            </li>
                        </ul>
                    </li>
                <% } %>
            </ul>
        </div>
    </div>
</nav>