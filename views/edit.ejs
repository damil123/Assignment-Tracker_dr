<!-- Edit assignment page - form to update existing assignment (protected) -->
<%- include('partials/header', { title: 'Edit Assignment' }) %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Page heading -->
            <h1 class="mb-4">
                <i class="bi bi-pencil-square"></i> Edit Assignment
            </h1>
            
            <!-- Assignment form card -->
            <div class="card shadow">
                <div class="card-body">
                    <!-- Form submits to /assignments/edit/:id -->
                    <form action="/assignments/edit/<%= assignment._id %>" method="POST">
                        
                        <!-- Course Name input - pre-filled with current value -->
                        <div class="mb-3">
                            <label for="courseName" class="form-label">
                                <i class="bi bi-book"></i> Course Name *
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="courseName" 
                                   name="courseName" 
                                   value="<%= assignment.courseName %>"
                                   required>
                        </div>
                        
                        <!-- Assignment Title input - pre-filled -->
                        <div class="mb-3">
                            <label for="title" class="form-label">
                                <i class="bi bi-file-text"></i> Assignment Title *
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="title" 
                                   name="title" 
                                   value="<%= assignment.title %>"
                                   required>
                        </div>
                        
                        <!-- Due Date input - pre-filled and formatted -->
                        <div class="mb-3">
                            <label for="dueDate" class="form-label">
                                <i class="bi bi-calendar-event"></i> Due Date *
                            </label>
                            <input type="date" 
                                   class="form-control" 
                                   id="dueDate" 
                                   name="dueDate" 
                                   value="<%= new Date(assignment.dueDate).toISOString().split('T')[0] %>"
                                   required>
                        </div>
                        
                        <!-- Row with two columns -->
                        <div class="row">
                            <!-- Status dropdown - current value selected -->
                            <div class="col-md-6 mb-3">
                                <label for="status" class="form-label">
                                    <i class="bi bi-flag"></i> Status *
                                </label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="Not Started" <%= assignment.status === 'Not Started' ? 'selected' : '' %>>
                                        Not Started
                                    </option>
                                    <option value="In Progress" <%= assignment.status === 'In Progress' ? 'selected' : '' %>>
                                        In Progress
                                    </option>
                                    <option value="Completed" <%= assignment.status === 'Completed' ? 'selected' : '' %>>
                                        Completed
                                    </option>
                                </select>
                            </div>
                            
                            <!-- Priority dropdown - current value selected -->
                            <div class="col-md-6 mb-3">
                                <label for="priority" class="form-label">
                                    <i class="bi bi-exclamation-triangle"></i> Priority *
                                </label>
                                <select class="form-select" id="priority" name="priority" required>
                                    <option value="Low" <%= assignment.priority === 'Low' ? 'selected' : '' %>>
                                        Low
                                    </option>
                                    <option value="Medium" <%= assignment.priority === 'Medium' ? 'selected' : '' %>>
                                        Medium
                                    </option>
                                    <option value="High" <%= assignment.priority === 'High' ? 'selected' : '' %>>
                                        High
                                    </option>
                                </select>
                            </div>
                        </div>
                        
                        <!-- Description textarea - pre-filled -->
                        <div class="mb-3">
                            <label for="description" class="form-label">
                                <i class="bi bi-card-text"></i> Description (Optional)
                            </label>
                            <textarea class="form-control" 
                                      id="description" 
                                      name="description" 
                                      rows="4"><%= assignment.description %></textarea>
                        </div>
                        
                        <!-- Form buttons -->
                        <div class="d-flex gap-2">
                            <!-- Update button -->
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Update Assignment
                            </button>
                            
                            <!-- Cancel button -->
                            <a href="/assignments" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>